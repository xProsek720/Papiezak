<Window x:Class="Papiezak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Papiezak"
        mc:Ignorable="d"
        Title="Jan Paweł 2 Gra Mojego Dzieciństwa" Height="420" Width="860"
        Closing="Window_Closing">
    <Grid>
        <TextBlock Name="opis" Margin="50, 20, 50, 340" TextAlignment="Center" Height="20">Jan Paweł 2 Gra Mojego Dzieciństwa Setup:</TextBlock>
        <ScrollViewer x:Name="scrollView" VerticalScrollBarVisibility="Hidden">
            <TextBlock Name="setupInfo" Margin="50, 50, 50, 120" Height="200" Background="LightGray"></TextBlock>
        </ScrollViewer>
        <TextBlock Margin="68, 30, 200, -163" Height="40">Setup Destination: </TextBlock>
        <TextBox Margin="200, 10, 200, -163" Height="20">C:\Program Files(x86)\JP2GMD</TextBox>
        <ProgressBar Name="progressBar" Height="30" VerticalAlignment="Top" Margin="10,300,10,10"/>
        <Button Name="btnStart" Content="Start" VerticalAlignment="Bottom" Width="100" Margin="20, 20, 420, 20" Click="BtnStart_Click"/>
        <Button Name="btnCancel" Content="Cancel" VerticalAlignment="Bottom" Width="100" Margin="20, 20, -420, 20" Click="BtnStart_Click"/>
    </Grid>
</Window>
